@inject Serenity.ITextLocalizer Localizer
@{
    ViewData["Title"] = Texts.Forms.Membership.SignUp.FormTitle.ToString(Localizer);
    ViewData["PageId"] = "SignUp";
    Layout = MVC.Views.Shared._LayoutNoNavigation;
}

<script id="Template_Membership_SignUpPanel" type="text/template">
    <h2 class="text-center p-4">
        <img src="@Url.Content("~/Content/site/images/serenity-logo-w-128.png")" 
            class="rounded-circle p-1" style="background-color: var(--s-sidebar-band-bg)"
            width="50" height="50" /> Serene
    </h2>

    <div class="s-Panel p-4">

        <h5 class="text-center my-4">@Texts.Forms.Membership.SignUp.FormTitle.ToString(Localizer)</h5>
        <p class="text-center">@Texts.Forms.Membership.SignUp.FormInfo.ToString(Localizer)</p>

        <form id="~_Form" action="">
            <div id="~_PropertyGrid"></div>
            <div class="px-field">
                <button id="~_SubmitButton" type="submit" class="btn btn-primary my-4 w-100">
                    @Texts.Forms.Membership.SignUp.SubmitButton.ToString(Localizer)
                </button>
            </div>
        </form>
    </div>
</script>

<div class="s-full-page justify-content-center">
    <div id="SignUpPanel"class="s-container-narrow">
    </div>
</div>

<script type="text/javascript">
$(function() {
    new Serene.Membership.SignUpPanel($('#SignUpPanel')).init();
});
</script>